<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">
  <PropertyGroup>
    <TargetFrameworks>net462;netcoreapp3.0</TargetFrameworks>
    <RootNamespace>Microsoft.Toolkit.UI.XamlHost</RootNamespace>
    <AssemblyName>Microsoft.Toolkit.Win32.UI.XamlHost.Managed</AssemblyName>
    <Title>Windows Community Toolkit XAMLHost</Title>
    <Description>This library provides XAML islands common helpers for WPF and WinForms. It is part of the Windows Community Toolkit.</Description>
    <PackageTags>XAML Islands XAMLHost</PackageTags>
    <PackageId>Microsoft.Toolkit.UI.XamlHost</PackageId>
    <IsWpfProject>true</IsWpfProject>
    <Platforms>x64;x86</Platforms>
  </PropertyGroup>

  <PropertyGroup>
    <XamlApp-Platform Condition="'$(Platform)' != ''">$(Platform)</XamlApp-Platform>
    <XamlApp-Platform Condition="'$(Platform)' == 'x86'">Win32</XamlApp-Platform>
    <XamlApp-Platform Condition="'$(Platform)'=='x86'">Win32</XamlApp-Platform>
    <XamlApp-Platform Condition="'$(Platform)'=='x64'">x64</XamlApp-Platform>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>
  <ItemGroup>
    <Content Include="..\Microsoft.Toolkit.Win32.UI.XamlApplication\bin\$(Configuration)\$(XamlApp-Platform)\Microsoft.Toolkit.Win32.UI.XamlHost.winmd">
      <Pack>true</Pack>
      <PackagePath>lib\uap10.0</PackagePath>
    </Content>

    <Content Include="..\Microsoft.Toolkit.Win32.UI.XamlApplication\bin\$(Configuration)\Win32\Microsoft.Toolkit.Win32.UI.XamlHost.xml">
      <Pack>true</Pack>
      <PackagePath>lib\uap10.0</PackagePath>
    </Content>

    <Content Include="..\Microsoft.Toolkit.Win32.UI.XamlApplication\bin\$(Configuration)\Win32\Microsoft.Toolkit.Win32.UI.XamlHost.dll">
      <Pack>true</Pack>
      <PackagePath>runtimes\win10-x86\native</PackagePath>
    </Content>

    <Content Include="..\Microsoft.Toolkit.Win32.UI.XamlApplication\bin\$(Configuration)\Win32\Microsoft.Toolkit.Win32.UI.XamlHost.pri">
      <Pack>true</Pack>
      <PackagePath>runtimes\win10-x86\native</PackagePath>
    </Content>

    <Content Include="..\Microsoft.Toolkit.Win32.UI.XamlApplication\bin\$(Configuration)\x64\Microsoft.Toolkit.Win32.UI.XamlHost.dll">
      <Pack>true</Pack>
      <PackagePath>runtimes\win10-x64\native</PackagePath>
    </Content>

    <Content Include="..\Microsoft.Toolkit.Win32.UI.XamlApplication\bin\$(Configuration)\x64\Microsoft.Toolkit.Win32.UI.XamlHost.pri">
      <Pack>true</Pack>
      <PackagePath>runtimes\win10-x64\native</PackagePath>
    </Content>

    <Content Include="..\Microsoft.Toolkit.Win32.UI.XamlApplication\Microsoft.Toolkit.Win32.UI.XamlApplication.targets">
      <Pack>true</Pack>
      <PackagePath>build</PackagePath>
    </Content>

    <Content Include="..\Microsoft.WinRT.Win32.targets">
      <Pack>true</Pack>
      <PackagePath>build</PackagePath>
    </Content>

    <Content Include="Microsoft.Toolkit.UI.XamlHost.props">
      <Pack>true</Pack>
      <PackagePath>build</PackagePath>
    </Content>

    <Content Include="Microsoft.Toolkit.UI.XamlHost.targets">
      <Pack>true</Pack>
      <PackagePath>build</PackagePath>
    </Content>

    
  </ItemGroup>

</Project>